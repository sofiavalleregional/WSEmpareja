<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    android:layout_height="match_parent"
    tools:context=".Home">


    <LinearLayout
        android:weightSum="12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:fontFamily="@font/cambriai"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/user1"
            android:text="Jugador 1"
            android:layout_weight="5"
            android:textAlignment="center"
            android:textSize="23dp"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <Button
            android:onClick="settingsShow"
            android:layout_weight="2"
            android:background="@drawable/anim_settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />


        <TextView
            android:fontFamily="@font/cambriai"
            android:background="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:textSize="23dp"
            android:textColor="@android:color/white"
            android:id="@+id/user2"
            android:text="Jugador 2"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <ImageView
        android:layout_width="350dp"
        android:layout_height="178dp"
        android:layout_gravity="center"
        android:src="@drawable/logo" />


    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="10dp"
        android:padding="10dp"
        app:cardElevation="10dp"
        android:layout_height="200dp">

        <Button
            android:onClick="partida"
            android:text="Jugar"
            android:textSize="30dp"
            android:fontFamily="@font/cambriab"
            android:paddingLeft="20dp"
            android:textColor="@android:color/white"
            android:textAlignment="textStart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/anim_play" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="10dp"
        android:padding="10dp"
        app:cardElevation="10dp"
        android:layout_height="170dp">

        <Button
            android:fontFamily="@font/cambriab"
            android:onClick="scoresShow"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:paddingLeft="20dp"
            android:textAlignment="textStart"
            android:text="Puntajes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/anim_scores" />
    </android.support.v7.widget.CardView>
</LinearLayout>