<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:background="@color/negro"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="140dp"
        android:background="@drawable/logo"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jugador1"
            android:textColor="@android:color/white"
            android:gravity="center"

            android:fontFamily="@font/cambriaz"
            android:textSize="23sp"/>
        <TextView
            android:drawableStart="@drawable/icono_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:paddingLeft="11dp"
            android:paddingRight="27dp"
            android:background="@drawable/item_ganador"
            android:layout_marginBottom="2dp"
            />
        <TextView
            android:drawableStart="@drawable/icono_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:paddingLeft="11dp"
            android:paddingRight="27dp"
            android:background="@drawable/item_ganador"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fondo_compara_puntajes"
        android:text="VS"
        android:layout_margin="7dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:fontFamily="@font/cambriai"
        android:textStyle="bold"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jugador2"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:fontFamily="@font/cambriaz"
            android:textSize="13sp"/>



        <TextView
            android:drawableStart="@drawable/icono_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:paddingLeft="6dp"
            android:paddingRight="20dp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:background="@drawable/item_perdedor"
            android:layout_marginBottom="2dp"
            />
        <TextView
            android:drawableStart="@drawable/icono_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:paddingLeft="6dp"
            android:paddingRight="20dp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:background="@drawable/item_perdedor"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="25dp"

        android:orientation="horizontal"
        android:weightSum="12"
        >

        <Button
            android:layout_weight="4.5"
            android:layout_height="40dp"
            android:layout_width="0dp"
            />
        <ImageButton
            android:layout_weight="2"
            android:layout_height="40dp"
            android:layout_width="0dp"
            />

        <Button
            android:layout_weight="4.5"
            android:layout_height="40dp"
            android:layout_width="0dp"
            />
    </LinearLayout>



</LinearLayout>