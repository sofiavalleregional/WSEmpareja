<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/ancho_item_carta"
    android:layout_height="@dimen/alto_total_item_carta">

    <ImageView
        android:padding="3dp"
        android:id="@+id/item_carta_figura"
        android:layout_width="@dimen/ancho_item_carta"
        android:layout_height="@dimen/alto_total_item_carta"
        android:background="@color/colorAccent"/>

    <ImageView
        android:id="@+id/item_carta_fondo_tapar"
        android:layout_width="@dimen/ancho_item_carta"
        android:layout_height="@dimen/alto_total_item_carta"
        android:background="@drawable/fondo_tapar_carta"/>

</android.support.constraint.ConstraintLayout>